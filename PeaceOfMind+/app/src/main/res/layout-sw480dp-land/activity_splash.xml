<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="navigator"
            type="ca.mudar.fairphone.peaceofmind.ui.activity.SplashActivity.SplashNavigator" />

    </data>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/logo_anim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/splashWrapper"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@+id/splashWrapper"
                app:srcCompat="@drawable/splash_logo_anim" />

            <LinearLayout
                android:id="@+id/splashWrapper"
                android:layout_width="@dimen/wrapper_max_width"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/splash_title"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/splash_land_title_text"
                    android:textStyle="italic" />

                <TextView
                    style="@style/splashDescText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/splash_desc_1" />

                <TextView
                    style="@style/splashDescText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="@string/splash_desc_2" />

                <TextView
                    style="@style/splashDescText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/splash_desc_3" />

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"
                    android:onClick="@{() -> navigator.onGrantPermission(context)}"
                    android:paddingEnd="32dp"
                    android:paddingStart="32dp"
                    android:text="@string/btn_grant_permission"
                    android:textColor="@color/text_primary_inv"
                    app:backgroundTint="@color/splash_button" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</layout>
