<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="ca.mudar.fairphone.peaceofmind.viewmodel.AtPeaceViewModel" />

        <variable
            name="peaceOfMindController"
            type="ca.mudar.fairphone.peaceofmind.dnd.PeaceOfMindController" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dnd_modes_background"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <android.support.v7.widget.AppCompatButton
            style="@style/dndModeButton.Port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_airplane_mode_white"
            android:onClick="@{()->peaceOfMindController.setAtPeaceOfflineMode()}"
            android:text="@string/airplane_mode"
            android:visibility="@{viewModel.hasAirplaneMode}" />

        <android.support.v7.widget.AppCompatButton
            style="@style/dndModeButton.Port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_ringer_none_white"
            android:onClick="@{()->peaceOfMindController.setSilentRingerMode()}"
            android:text="@string/ringer_none" />

        <android.support.v7.widget.AppCompatButton
            style="@style/dndModeButton.Port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_ringer_priority_white"
            android:onClick="@{()->peaceOfMindController.setPriorityRingerMode()}"
            android:text="@string/ringer_priority" />
    </LinearLayout>

</layout>
