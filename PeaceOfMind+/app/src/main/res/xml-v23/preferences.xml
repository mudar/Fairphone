<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:dialogTitle="@string/prefs_dialog_title_duration"
        android:entries="@array/prefs_duration_entries"
        android:entryValues="@array/prefs_duration_values"
        android:icon="@drawable/ic_timer_white"
        android:key="@string/prefs_key_duration"
        android:title="@string/prefs_title_duration" />

    <CheckBoxPreference
        android:icon="@drawable/ic_airplane_mode_white"
        android:key="@string/prefs_key_has_airplane_mode"
        android:summary="@string/prefs_summary_enable_airplane_mode"
        android:title="@string/prefs_title_enable_airplane_mode" />

    <PreferenceCategory
        android:key="@string/prefs_key_cat_notifications"
        android:title="@string/prefs_cat_notification">

        <SwitchPreference
            android:key="@string/prefs_key_has_end_notification"
            android:summary="@string/prefs_summary_has_end_notification"
            android:title="@string/prefs_title_has_end_notification" />

        <CheckBoxPreference
            android:dependency="@string/prefs_key_has_end_notification"
            android:icon="@drawable/ic_vibration_white"
            android:key="@string/prefs_key_notification_vibrate"
            android:title="@string/prefs_title_notification_vibrate" />

        <RingtonePreference
            android:dependency="@string/prefs_key_has_end_notification"
            android:icon="@drawable/ic_notification_sound_white"
            android:key="@string/prefs_key_notification_ringtone"
            android:ringtoneType="notification"
            android:showDefault="true"
            android:showSilent="true"
            android:title="@string/prefs_title_notification_ringtone" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/prefs_cat_advanced">
        <CheckBoxPreference
            android:key="@string/prefs_key_dnd_perms"
            android:summary="@string/prefs_summary_dnd"
            android:title="@string/prefs_title_dnd" />
        <CheckBoxPreference
            android:key="@string/prefs_key_battery_optimization_perms"
            android:summary="@string/prefs_summary_battery_optimization"
            android:title="@string/prefs_title_battery_optimization" />
        <CheckBoxPreference
            android:key="@string/prefs_key_notification_listener_perms"
            android:summary="@string/prefs_summary_notification_listener_optional"
            android:title="@string/prefs_title_notification_listener" />
    </PreferenceCategory>

</PreferenceScreen>